@model ProiectDAW.Models.ChangePasswordViewModel
@{
    ViewBag.Title = "Change Password";
}
<header class="page-header page-header-dark bg-img-repeat bg-success-soft" style="background-image: url(&quot;assets/img/pattern-shapes.png&quot;)">
    <div class="page-header-content">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-lg-6">
                    <h1 class="page-header-title">Schimba-ti parola</h1>
                    <p class="page-header-text">O parola noua iti securizeaza contul.</p>
                </div>
                <div class="col-lg-6">
                    <div class="card rounded-lg text-dark">
                        <div class="card-header py-4">Schimbare Parola</div>
                        <div class="card-body">
                            @using (Html.BeginForm("ChangePassword", "Manage", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                            {
                                @Html.AntiForgeryToken()
                                @Html.ValidationSummary("", new { @class = "text-danger" })
                                <div class="form-group">
                                    @Html.LabelFor(m => m.OldPassword, new { @class = "small text-gray-600" })
                                    @Html.PasswordFor(m => m.OldPassword, new { @class = "form-control rounded-pill" })
                                </div>
                                <div class="form-group">
                                    @Html.LabelFor(m => m.NewPassword, new { @class = "small text-gray-600" })
                                    @Html.PasswordFor(m => m.NewPassword, new { @class = "form-control rounded-pill" })
                                </div>
                                <div class="form-group">
                                    @Html.LabelFor(m => m.ConfirmPassword, new { @class = "small text-gray-600" })
                                    @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control rounded-pill" })
                                </div>
                                <button type="submit" class="btn btn-primary btn-marketing btn-block rounded-pill mt-2">Salveaza parola</button>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</header>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
