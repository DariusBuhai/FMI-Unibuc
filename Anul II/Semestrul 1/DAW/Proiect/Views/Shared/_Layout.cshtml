<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Styles.Render("~/bundles/modernizr")
</head>
<body>
    <div id="layoutDefault">
        <div id="layoutDefault_content" class="bg-dark">
            <main>
                <nav class="navbar navbar-marketing navbar-expand-lg navbar-dark bg-black fixed-top">
                    <div class="container">
                        <a class="navbar-brand" href="/">Magazin Online</a>
                        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation"><i class="glyphicon glyphicon-menu-hamburger"></i></button>
                        <div class="collapse navbar-collapse" id="navbarSupportedContent">
                            <ul class="navbar-nav ml-auto mr-lg-5">
                                @if (User.IsInRole("Admin"))
                                {
                                    <li class="nav-item">@Html.ActionLink("Categorii", "Index", "Categories", null, new { @class = "nav-link" })</li>
                                    <li class="nav-item">@Html.ActionLink("Utilizatori", "Index", "Users", null, new { @class = "nav-link" })</li>
                                }

                                @if (User.IsInRole("Editor") || User.IsInRole("Admin"))
                                {
                                    <li class="nav-item">@Html.ActionLink("Adaugare produs", "New", "Products", null, new { @class = "nav-link" })</li>
                                }

                                <li class="nav-item">@Html.ActionLink("Produse", "Index", "Products", null, new { @class = "nav-link" })</li>
                                @Html.Partial("_LoginPartial")

                            </ul>

                        </div>
                    </div>
                </nav>

                <br /><br />
                @RenderBody()

                <div id="layoutDefault_footer">
                    <footer class="footer pt-5 pb-5 mt-auto bg-dark footer-dark">
                        <div class="container">
                            <div class="row align-items-center">
                                <div class="col-md-6 small">&copy; @DateTime.Now.Year - ProductsApp</div>
                            </div>
                        </div>

                    </footer>
                </div>

                @Scripts.Render("~/bundles/jquery")
                @Scripts.Render("~/bundles/bootstrap")
                @Scripts.Render("~/bundles/js")
                @RenderSection("scripts", required: false)
            </main>
        </div>
    </div>


</body>
</html>
