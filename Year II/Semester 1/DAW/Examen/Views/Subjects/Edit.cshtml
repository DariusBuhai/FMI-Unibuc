@model BuhaiDarius34.Models.Subject

<h2>Editare subiect</h2>

<form method="post" action="/Subjects/Edit/@Model.Id">

    @Html.ValidationSummary(false, "", new { @class = "text-danger" })
    @Html.HttpMethodOverride(HttpVerbs.Put)

    @Html.HiddenFor(m => m.Id)

    @Html.Label("NumeSub", "Denumire subiect")
    <br />
    @Html.Editor("NumeSub", new { htmlAttributes = new { @class = "form-control" } })
    @Html.ValidationMessageFor(m => m.NumeSub, null, new { @class = "text-danger" })
    <br /><br />

    <button class="btn btn-success" type="submit"><i class="glyphicon glyphicon-floppy-disk"></i>&nbsp; Modifica subiect</button>
</form>

