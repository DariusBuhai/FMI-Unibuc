
@model ProiectDAW.Models.Comment
@{
    ViewBag.Title = "Edit";
}

<section class="bg-light py-10">
    <div class="container">
        <div class="card rounded-lg text-dark">
        <div class="card-header py-4">Editare comentariu</div>
        <div class="card-body">
            @using (Html.BeginForm(actionName: "Edit", controllerName: "Comments"))
            {
                @Html.HttpMethodOverride(HttpVerbs.Put)
                @Html.ValidationSummary(false, "", new { @class = "text-danger" })
                @Html.HiddenFor(m => m.CommentId)
                <div class="form-group">
                    @Html.Label("Content", "Continut", new { @class = "small text-gray-600" })
                    @Html.EditorFor(m => m.Content, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(m => m.Content, null, new { @class = "text-danger" })
                </div>
                <div class="form-group">
                    @Html.Label("Rating", "Rating", new { @class = "small text-gray-600" })
                    @Html.Editor("Rating", new { htmlAttributes = new { @class = "form-control", @type = "number", min = "1", max = "5" } })
                    @Html.ValidationMessageFor(m => m.Rating, null, new { @class = "text-danger" })
                </div>
                <button type="submit" class="btn btn-primary btn-marketing btn-block mt-5"><i class="glyphicon glyphicon-floppy-save"></i>&nbsp; Salveaza Comentariu</button>

            }
            <form method="post" action="/Comments/Delete/@Model.CommentId">
                @Html.HttpMethodOverride(HttpVerbs.Delete)
                <button type="submit" class="btn btn-danger btn-marketing btn-block mt-2"><i class="glyphicon glyphicon-trash"></i>&nbsp; Sterge comentariu</button>
            </form>
        </div>
    </div>
</section>

